<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uet_schedule">

    <!--Internet Permission-->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="UET Todo"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".View.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.MainActivity"  android:theme="@style/generalnotitle"></activity>
        <activity android:name=".View.ScheduleScreen"  android:theme="@style/generalnotitle"></activity>
        <activity android:name=".View.ScoreScreen"  android:theme="@style/generalnotitle"></activity>
        <activity android:name=".View.ExamTimeSreen"  android:theme="@style/generalnotitle"></activity>
        <activity android:name=".View.PDFViewerScreen"  android:theme="@style/generalnotitle"></activity>


    </application>
</manifest>
